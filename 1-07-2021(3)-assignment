import java.util.*;
class Star
{
public static void main(String args[])
{
int n,s;
Scanner sc=new Scanner(System.in);
n=sc.nextInt();
s=n-1;
for(int i=1;i<=n;i++)
{
for(int j=1;j<=i;j++)
{
System.out.print("* ");
}
System.out.println( );
}
for (int i=s;i<=s;i--)
{
for (int j=1;j<=i;j++)
{
System.out.print("* ");
}
System.out.println( );
}
}
}
OUTPUT:
*
**
***
****
*****
****
***
**
*
