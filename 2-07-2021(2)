import java.util.*; 
class half 
{
 public static void main(String args[])
  { 
    int n;
    Scanner sc=new Scanner(System.in);
    n=sc.nextInt(); 
    int i,j; 
 for(i=1;i<=n;i++) 
 { 
 for(j=1;j<=(2*i-1);j++) 
 {
  System.out.print("* "); 
  } 
  System.out.println();
   } 
   for(i=1;i<=n;i++)
    { 
  for(j=2*n-1;j>2*i;j--) 
  { 
  	System.out.print("* ");
  	 }
  	  System.out.println(); 
  	  } 
    } 
}
OUTPUT: 
* 
* * * 
* * * * * 
* * * * * * * 
* * * * * 
* * * 
* 
